<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <% if(username) { %> 
        <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">  
          <h5 class="mr-lg-2" style="padding-top: 0.5em; padding-right: 0.5em;">Logged In As: <%= username %> </h5> 
           <button type="submit" class="btn btn-outline-secondary my-2 my-sm-0">Logout</button>
        </form>     
      <%  } else { %>
        <form class="form-inline my-2 my-lg-0" action="/login" method="POST">  
          <input class="form-control mr-sm-2" type="text" name="username" placeholder="Username" style="width: 300px; margin: 1em">
         <button type="submit" class="btn btn-outline-secondary my-2 my-sm-0">Login</button> 
       </form>  
       <% } %> 

    </nav>
  </header>